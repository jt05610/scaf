-- name: Get{{pascal .Name}} :one
SELECT * FROM {{lower .Plural}}
WHERE id = $1 LIMIT 1;
-- name: List{{pascal .Name}}s :many
SELECT * FROM {{lower .Plural}}
ORDER BY name;
