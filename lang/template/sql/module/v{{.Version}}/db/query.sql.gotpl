    {{range $i, $e := .Fields}}{{- if $e.Create}}{{- if gt $i 0}}, {{end}}
    {{- fLower $e.Name}}{{end -}}
{{- end}}
) VALUES (
    {{range $i, $e := .Fields}}{{- if $e.Create}}{{- if gt $i 0}}, {{end}}$i{{end -}} {{end }}
)
RETURNING *;

